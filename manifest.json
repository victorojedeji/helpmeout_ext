{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0",
    "description": "This extension helps you record and share help videos with ease.",
    "permissions": ["activeTab", "desktopCapture", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/icon-16x16.png",
        "32": "assets/icon-32x32.png",
        "128": "assets/icon-128x128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["control-panel.js"]
      }
    ],
    "icons": {
      "16": "assets/icon-16x16.png",
      "48": "assets/icon-32x32.png",
      "128": "assets/icon-128x128.png"
    }
  }
  